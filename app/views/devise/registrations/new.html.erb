<h2><%= t('register') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :autofocus => true ,:label => t('views.auth.email')%>
    <%= f.input :password ,:label => t('views.auth.password') %>
    <%= f.input :password_confirmation ,:label => t('views.auth.confirm_password') %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
