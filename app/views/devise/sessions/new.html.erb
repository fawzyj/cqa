<h2><%= t('login') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true ,:label => t('views.auth.email')%>
    <%= f.input :password, :required => false ,:label => t('views.auth.password')%>
    <%= f.input :remember_me,:label => t('views.auth.remember_me'), :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>