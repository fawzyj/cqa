<p id="notice"><%= notice %></p>

<div>
  <%= @answer.body %>
  <% if @answer.questions.size > 0 %>
    <ul>
      <% for q in @answer.questions %>
          <li><%= q.title %></li>
      <% end  %>
    </ul>
<% end  %>
</div>


<%= link_to t('edit'), edit_answer_path(@answer) %> |
