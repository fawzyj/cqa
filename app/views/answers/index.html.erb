<h1><%= t('views.answer.list') %></h1>

<table>
  <tr>
    <th><%= t('views.answer.body') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.body %></td>
    <td><%= link_to t('show'), answer %></td>
    <td><%= link_to t('edit'), edit_answer_path(answer) %></td>
    <td><%= link_to t('destroy'), answer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('views.answer.new+answer'), new_answer_path %>
