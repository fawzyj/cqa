<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <title>Cqa</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <style type="text/css">
      html,body{
          margin: 0;
          padding: 0;
          background: #ddd;
      }
      #page_wrapper{
          background: #fff;
          margin: 30px auto;
          padding: 30px;
          width:900px;
          border: 1px solid #999;
      }
      #header {
          border-bottom:1px dotted #999;
      }
      ul#nav {
          margin: 0;
          padding: 0;
          overflow: hidden;
          list-style: none;
          border-top:1px dotted #999;
      }
      ul#nav li{
          float: right;
      }
      ul#nav li a {
          padding: 5px;
          display: block;
      }
      ul.side_list{
          margin: 0;
          padding: 0;
          
          list-style: none;
      }
      ul.side_list li{
          border-bottom: 1px dotted #999;
      }
      ul.side_list li a{
          display: block;
          padding: 5px;
      }
      #footer {
          height: 20px;
          padding:10px;
          border-top:1px dotted #999;
      }
      #content_wrapper{
          overflow: hidden;
      }
      #side_bar{
          float: right;
          width:260px;
      }
      #main_content{
          float: right;
          margin-right: 20px;
          width:600px;
      }

  </style>
</head>
<body>
<div id="page_wrapper">
  <div id="header">
    <div id="user_info">
      <% if user_signed_in? %>
          You are signed in as <%= current_user.email  %>
          <%= link_to(t('logout'), destroy_user_session_path, :method => 'delete') %> |
          <%= link_to(t('profile'), edit_user_registration_path) %>
      <% else %>
          <%= link_to(t('login'), new_user_session_path)  %> |
          <%= link_to(t('register'), new_user_registration_path)  %>
      <% end %>
    </div>
    <h1><%= t('main_title') %></h1>
    <div id="global_messages">
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
   </div>
    <ul id="nav">
      <li><%= link_to t('views.question.questions'), questions_path %></li>
      <li><%= link_to t('views.article.articles'), articles_path %></li>
    </ul>

  </div>
  <div id="content_wrapper">
    <div id="side_bar">
      <h3><%= t('views.category.categories') %></h3>
      <ul class="side_list">
        <li></li>
      </ul>
    </div>
    <div id="main_content">
      <%= yield %>
    </div>
  </div>
  <div id="footer"></div>
</div>


</body>
</html>
